    cout<<"enter your number";
   int n;
cin>>n;
int a;
cin>> a;
int b;
cin>>b;


switch (n)
{
case 1 : cout<<(a+b)<<endl;
    break;
    case 2 : cout<<(a-b)<<endl;
    break;
    case 3 : cout<<(a*b)<<endl;
    break;
    case 4 : cout<<(a/b)<<endl;
    break;
	  case 5 : cout<<(a%b)<<endl;
    break;
	  case 6 : exit(0);
    break;
default:cout<<"Invalid Operation";  
}
return 0;
